@model ProjEmp.Models.EmpVewMdl

<h2>Edit Employee</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="EmailId">Email:</label>
        <input class="form-control" asp-for="EmailId" />
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Dept">Department:</label>
        <input class="form-control" asp-for="Dept" />
        <span asp-validation-for="Dept" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
